@model Inspinia_MVC5.Models.SERIE_DOCUMENTO

@{
    ViewBag.Title = "Documentos Series";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-sm-4">
        <h2>Series de Documentos</h2>
    </div>
</div>
<p></p>
<div class="row">
    <div class="col-lg-7 col-md-7 col-sm-10 col-xs-12 col-md-offset-2" col-lg-offset-2>
        <div class="panel panel-default">
            <div class="panel-heading" style="text-align:center">
                <h2>Agregar Serie</h2>
            </div>
            <div class="panel-body">
                @using (Html.BeginForm("Create", "SERIE_DOCUMENTO", FormMethod.Post, new { id = "formulario" }))
                {
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <div class="row">
                        <div class="col-md-1 col-xs-2">
                            <i class="fad fa-file-code fa-2x"></i>
                        </div>
                        <div class="col-md-11 col-xs-10">
                            @Html.DropDownList("TIPO_DOC_ID", null, htmlAttributes: new { @class = "form-control select2", style = "width: 100%; float:left;" })
                            <span id="TIPO_DOC_ID-error" class="labelError" style="display:none; ">&nbsp;</span>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12">&nbsp;</div>
                    </div>
                    <div class="row">
                        <div class="col-md-1 col-xs-2">
                            <i class="fad fa-file-prescription fa-2x"></i>
                        </div>
                        <div class="col-md-11 col-xs-10">
                            <input id="SERIE" type="text" class="form-control" name="SERIE" placeholder="Serie" value="@ViewBag.SERIE">
                            <span id="SERIE-error" class="labelError" style="display:none; ">&nbsp;</span>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12">&nbsp;</div>
                    </div>
                    <div class="row">
                        <div class="col-md-1 col-xs-2">
                            <i class="fad fa-file-alt fa-2x"></i>
                        </div>
                        <div class="col-md-11 col-xs-10">
                            <input id="resolucion" type="text" class="form-control" name="resolucion" placeholder="Resolucion" value="@ViewBag.resolucion">
                            <span id="resolucion-error" class="labelError" style="display:none; ">&nbsp;</span>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12">&nbsp;</div>
                    </div>
                    <div class="row">
                        <div class="col-md-1 col-xs-2">
                            <i class="fad fa-file-plus fa-2x"></i>
                        </div>
                        <div class="col-md-11 col-xs-10">
                            <input id="DESDE" type="text" class="form-control" name="DESDE" placeholder="Del" value="@ViewBag.DESDE">
                            <span id="DESDE-error" class="labelError" style="display:none; ">&nbsp;</span>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12">&nbsp;</div>
                    </div>
                    <div class="row">
                        <div class="col-md-1 col-xs-2">
                            <i class="fad fa-file-plus fa-2x"></i>
                        </div>
                        <div class="col-md-11 col-xs-10">
                            <input id="HASTA" type="text" class="form-control" name="HASTA" placeholder="Al" value="@ViewBag.HASTA">
                            <span id="HASTA-error" class="labelError" style="display:none; ">&nbsp;</span>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12">&nbsp;</div>
                    </div>
                    <div class="row">
                        <div class="col-md-5 col-xs-4" id="data_1">
                            <div class="input-group date">
                                <span class="input-group-addon"><i class="fad fa-calendar"></i></span><input id="FECHA_RESOLUCION" name="FECHA_RESOLUCION" type="text" placeholder="Fecha de Resolución" class="form-control" value="@ViewBag.FECHA_RESOLUCION">
                            </div>
                            <span id="FECHA_RESOLUCION-error" class="labelError" style="display:none; ">&nbsp;</span>
                        </div>
                        <div class="col-md-5 col-xs-4" id="data_1">
                            <div class="input-group date">
                                <span class="input-group-addon"><i class="fad fa-calendar"></i></span><input id="FECHA_VIGENTE" name="FECHA_VIGENTE" type="text" placeholder="Fecha de Vencimiento" class="form-control" value="@ViewBag.FECHA_VIGENTE">
                            </div>
                            <span id="FECHA_VIGENTE-error" class="labelError" style="display:none; ">&nbsp;</span>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12">&nbsp;</div>
                    </div>
                    
                }
            </div>
            <div class="panel-footer">
                <div class="row">
                    <div class="col-md-2">
                        <button class="btn btn-success" id="guardar" name="guardar"><i class="fad fa-save"></i>&nbsp;Guardar</button>
                    </div>
                    <div class="col-md-3">
                        <button class="btn btn-primary" onclick="location.href = '@Url.Action("Index")' "><i class="fad fa-step-backward"></i>&nbsp;Regresar</button>
                    </div>
                    <div class="row">
                        <div class="col-md-12">&nbsp;</div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Styles {
    @Styles.Render("~/plugins/select2Styles")
    @Styles.Render("~/plugins/clockpickerStyles")
    <style type="text/css">
        .labelError {
            color: red;
        }

        .label-fsteps {
            color: #999;
        }

        .row-steps {
            border-bottom-color: #999;
            border-bottom-style: solid;
        }

        .onoffswitch-switch {
            border: 2px solid #1c84c6 !important;
        }

        .onoffswitch-label {
            border: 2px solid #1c84c6 !important;
        }

        .onoffswitch-inner:before {
            content: "SI" !important;
            background-color: #1c84c6 !important;
        }

        .onoffswitch-inner:after {
            content: "NO" !important;
        }
    </style>
}

