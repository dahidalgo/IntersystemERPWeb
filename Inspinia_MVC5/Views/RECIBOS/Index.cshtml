    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.NRO_RECIBO)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.FECHA_EMISION)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.SUBTOTAL)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TOTAL)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ANULADO)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CAUSA_ANULADO)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DESCRIPCION)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.NRO_DOC_PAGO)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CLIENTE.NOMBRE_CLTE)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.FORMA_PAGO.DESCRIPCION)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.USUARIO.NOMBRE_COMPLETO)
        </td>
        <td>
			@Html.ActionLink("Details", "Details", new { id=item.RECIBO_ID }, new { @class = "btn btn-primary btn-sm"})
            @Html.ActionLink("Edit", "Edit", new { id=item.RECIBO_ID }, new { @class = "btn btn-white btn-sm"})
            @Html.ActionLink("Delete", "Delete", new { id=item.RECIBO_ID }, new { @class = "btn btn-white btn-sm"})
