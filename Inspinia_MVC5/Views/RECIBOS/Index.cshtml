            @Html.DisplayNameFor(model => model.NRO_DOC_PAGO)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CLIENTE.NOMBRE_CLTE)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FORMA_PAGO.DESCRIPCION)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.USUARIO.NOMBRE_COMPLETO)
        </th>
