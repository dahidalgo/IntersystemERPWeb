@model Inspinia_MVC5.Models.CLIENTE

@{
    ViewBag.Title = "Clientes";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-sm-4">
        <h2>Clientes</h2>
    </div>
</div>
<p></p>

<div class="row">
    <div class="col-lg-7 col-md-7 col-sm-10 col-xs-12 col-md-offset-2" col-lg-offset-2">
        <div class="panel panel-default">
            <div class="panel-heading" style="text-align:center">
                <h2>Editar Cliente</h2>
            </div>
            <div class="panel-body">
                @using (Html.BeginForm("Edit", "CLIENTES", FormMethod.Post, new { id = "formulario" }))
                {
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    @Html.HiddenFor(model => model.CLIENTE_ID)
                    <div class="row">
                        <div class="col-md-2 col-xs-2">
                            <h4><strong> Empresa:&nbsp;&nbsp; </strong></h4>
                        </div>
                        <div class="col-md-10 col-xs-10">
                            @Html.EditorFor(model => model.NOMBRE_CLTE, new { htmlAttributes = new { @id = "NOMBRE_CLTE", @class = "form-control" } })
                            <span id="NOMBRE_CLTE-error" class="labelError" style="display:none; ">&nbsp;</span>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12">&nbsp;</div>
                    </div>
                    <div class="row">
                        <div class="col-md-2 col-xs-2">
                            <h4><strong> Dirección:&nbsp;&nbsp; </strong></h4>
                        </div>
                        <div class="col-md-10 col-xs-10">
                            @Html.EditorFor(model => model.DIRECCION, new { htmlAttributes = new { @id = "DIRECCION", @class = "form-control" } })
                            <span id="DIRECCION-error" class="labelError" style="display:none; ">&nbsp;</span>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12">&nbsp;</div>
                    </div>
                    <div class="row">
                        <div class="col-md-2 col-xs-2">
                            <h4><strong> NIT:&nbsp;&nbsp; </strong></h4>
                        </div>
                        <div class="col-md-10 col-xs-10">
                            @Html.EditorFor(model => model.NIT, new { htmlAttributes = new { @id = "NIT", @class = "form-control" } })
                            <span id="NIT-error" class="labelError" style="display:none; ">&nbsp;</span>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12">&nbsp;</div>
                    </div>
                    <div class="row">
                        <div class="col-md-2 col-xs-2">
                            <h4><strong> Contacto:&nbsp;&nbsp; </strong></h4>
                        </div>
                        <div class="col-md-10 col-xs-10">
                            @Html.EditorFor(model => model.CONTACTO, new { htmlAttributes = new { @id = "CONTACTO", @class = "form-control" } })
                            <span id="CONTACTO-error" class="labelError" style="display:none; ">&nbsp;</span>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12">&nbsp;</div>
                    </div>
                    <div class="row">
                        <div class="col-md-2 col-xs-2">
                            <h4><strong> Teléfono:&nbsp;&nbsp; </strong></h4>
                        </div>
                        <div class="col-md-10 col-xs-10">
                            @Html.EditorFor(model => model.TELEFONO, new { htmlAttributes = new { @id = "TELEFONO", @class = "form-control" } })
                            <span id="TELEFONO-error" class="labelError" style="display:none; ">&nbsp;</span>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12">&nbsp;</div>
                    </div>
                    <div class="row">
                        <div class="col-md-2 col-xs-2">
                            <h4><strong> E-mail:&nbsp;&nbsp; </strong></h4>
                        </div>
                        <div class="col-md-10 col-xs-10">
                            @Html.EditorFor(model => model.E_MAIL, new { htmlAttributes = new { @id = "E_MAIL", @class = "form-control", @type = "email" } })
                            <span id="E_MAIL-error" class="labelError" style="display:none; ">&nbsp;</span>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12">&nbsp;</div>
                    </div>
                    <div class="row">
                        <div class="col-md-2 col-xs-2">
                            <h4><strong> Estado:&nbsp;&nbsp; </strong></h4>
                        </div>
                        <div class="col-md-10 col-xs-10">
                            @Html.EditorFor(model => model.CLTE_ACTIVO, new { htmlAttributes = new { @id = "CLTE_ACTIVO", @class = "form-control", @type = "email" } })
                            <span id="CLTE_ACTIVO-error" class="labelError" style="display:none; ">&nbsp;</span>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12">&nbsp;</div>
                    </div>
                }
            </div>
            <div class="panel-footer">
                <div class="row">
                    <div class="col-md-2">
                        <button class="btn btn-success" id="guardar" name="guardar"><i class="fad fa-save"></i>&nbsp;Guardar</button>
                    </div>
                    <div class="col-md-3">
                        <button class="btn btn-primary" onclick="location.href = '@Url.Action("Index")' "><i class="fad fa-step-backward"></i>&nbsp;Regresar</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Styles {
    @Styles.Render("~/plugins/select2Styles")
    <style type="text/css">
        .labelError {
            color: red;
        }

        .label-fsteps {
            color: #999;
        }

        .row-steps {
            border-bottom-color: #999;
            border-bottom-style: solid;
        }

        .onoffswitch-switch {
            border: 2px solid #1c84c6 !important;
        }

        .onoffswitch-label {
            border: 2px solid #1c84c6 !important;
        }

        .onoffswitch-inner:before {
            content: "SI" !important;
            background-color: #1c84c6 !important;
        }

        .onoffswitch-inner:after {
            content: "NO" !important;
        }
    </style>
}

@section Scripts {
    <script type="text/javascript">
        $(document).ready(function () {
            // button next action
            $("#guardar").click(function () {
                var formValid = true;
                var empresa = $('#NOMBRE_CLTE').val();
                var direccion = $('#DIRECCION').val();
                var nit = $('#NIT').val();
                var contacto = $('#CONTACTO').val();
                var telefono = $('#TELEFONO').val();
                var email = $('#E_MAIL').val();

                //clean all error labels
                $(".labelError").hide();

                if (!empresa) {
                    formValid = false;
                    $("#NOMBRE_CLTE-error").text('Requerido.');
                    $("#NOMBRE_CLTE-error").show();
                }
                if (!direccion) {
                    formValid = false;
                    $("#DIRECCION-error").text('Requerido.');
                    $("#DIRECCION-error").show();
                }
                if (!nit) {
                    formValid = false;
                    $("#NIT-error").text('Requerido.');
                    $("#NIT-error").show();
                }
                if (!contacto) {
                    formValid = false;
                    $("#CONTACTO-error").text('Requerido.');
                    $("#CONTACTO-error").show();
                }
                if (!telefono) {
                    formValid = false;
                    $("#TELEFONO-error").text('Requerido.');
                    $("#TELEFONO-error").show();
                }
                if (!email) {
                    formValid = false;
                    $("#E_MAIL-error").text('Requerido.');
                    $("#E_MAIL-error").show();
                }
                if (formValid) {
                    $('#formulario').submit();
                }
            });
        });
    </script>
}