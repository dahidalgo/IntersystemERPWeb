@model Inspinia_MVC5.Models.CLIENTE

@{
    ViewBag.Title = "Clientes";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-sm-4">
        <h2>Clientes</h2>
    </div>
</div>
<p></p>
<div class="row">
    <div class="col-lg-7 col-md-7 col-sm-10 col-xs-12 col-md-offset-2">
        <div class="panel panel-default">
            <div class="panel-heading" style="text-align:center">
                <h2>Eliminar Cliente</h2>
            </div>
            <div class="panel-body">
                <div class="row">
                    <div class="bg-danger p-xs b-r-sm ">¿Está seguro de eliminar este registro?</div>
                </div>
                <div class="row">
                    <div class="col-md-2 col-xs-2">
                        <h4><strong> Código:&nbsp;&nbsp; </strong></h4>
                    </div>
                    <div class="col-md-10 col-xs-10">
                        <h4>@Model.CODIGO_CLTE</h4>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-2 col-xs-2">
                        <h4><strong> Empresa:&nbsp;&nbsp; </strong></h4>
                    </div>
                    <div class="col-md-10 col-xs-10">
                        <h4>@Model.NOMBRE_CLTE</h4>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-2 col-xs-2">
                        <h4><strong> Nit:&nbsp;&nbsp; </strong></h4>
                    </div>
                    <div class="col-md-10 col-xs-10">
                        <h4>@Model.NIT</h4>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-2 col-xs-2">
                        <h4><strong> Dirección:&nbsp;&nbsp; </strong></h4>
                    </div>
                    <div class="col-md-10 col-xs-10">
                        <h4>@Model.DIRECCION</h4>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-2 col-xs-2">
                        <h4><strong> Contacto:&nbsp;&nbsp; </strong></h4>
                    </div>
                    <div class="col-md-10 col-xs-10">
                        <h4>@Model.CONTACTO</h4>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-2 col-xs-2">
                        <h4><strong> Teléfono:&nbsp;&nbsp; </strong></h4>
                    </div>
                    <div class="col-md-10 col-xs-10">
                        <h4>@Model.TELEFONO</h4>
                    </div>
                </div>
            </div>
            <div class="panel-footer">
                <div class="row">
                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()
                        <div class="col-md-3">
                            <button class="btn btn-danger eliminar"><i class="fad fa-eraser"></i>&nbsp;Eliminar</button>
                        </div>
                    }
                    <div class="col-md-3">
                        <button class="btn btn-primary" onclick="location.href = '@Url.Action("Index")' "><i class="fad fa-step-backward"></i>&nbsp;Regresar</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@section Styles {
    @Styles.Render("~/plugins/sweetAlertStyles")
}

@section Scripts {
    @Scripts.Render("~/plugins/sweetAlert")

    <script type="text/javascript">
        $(document).ready(function () {

            $('.eliminar').click(function () {
                swal({
                    title: "¿Está seguro de eliminar este registro?",
                    text: "¡No se podra recuperar ni consultar información acerca de este cliente!",
                    type: "warning",
                    showCancelButton: true,
                    confirmButtonColor: "#DD6B55",
                    confirmButtonText: "¡Si, eliminar!",
                    closeOnConfirm: false
                }, function () {
                        $('.eliminar').submit();
                        swal("Eliminado!", "El registro ha sido eliminado.", "success");

                });
            });
        });
    </script>
}